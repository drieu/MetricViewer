<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>


<?import jfxtras.labs.scene.control.CalendarTextField?>
<?import javafx.scene.control.cell.ComboBoxListCell?>

<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.LineChart?>
<GridPane fx:controller="fr.dr.viewer.MetricViewerController"
          xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10" >
	<padding><Insets top="25" right="15" bottom="10" left="15"/></padding>

	<Text fx:id="info" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

	<Label text="Début" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <CalendarTextField fx:id="calendarStartDateTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

	<Label text="Fin" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
	<CalendarTextField fx:id="calendarEndDateTextField" GridPane.columnIndex="3" GridPane.rowIndex="1" />
	<ComboBox fx:id="metricsComboBox" promptText="Métrique" prefWidth="100" GridPane.columnIndex="4" GridPane.rowIndex="1" />

	<ListView fx:id="serversListView" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2"/>

	<TabPane fx:id="tabPane" GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.columnSpan="4" >
		<tabs>
			<Tab text="Graphic">
				<LineChart fx:id="lineChart">
					<xAxis><NumberAxis label="Values for X-Axis" lowerBound="0" upperBound="3" tickUnit="1"/></xAxis>
					<yAxis><NumberAxis label="Values for Y-Axis" lowerBound="0" upperBound="3" tickUnit="1"/></yAxis>
				</LineChart>
			</Tab>
		</tabs>
	</TabPane>


</GridPane>